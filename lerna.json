{
  "npmClient": "yarn",
  "version": "0.2.7",
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-lockfile",
        "--no-package-lock"
      ]
    },
    "publish": {
      "registry": "http://registry.npmjs.org",
      "verifyRegistry": false,
      "verifyAccess": false,
      "allowBranch": "master"
    }
  }
}
