{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "esnext",
    "lib":[
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "rootDir": "./src",
    "outDir": "./dist",
    "pretty": true,
    "isolatedModules": false,
    "removeComments": true,
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
