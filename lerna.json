{
  "version": "0.6.7",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-lockfile",
        "--no-package-lock"
      ]
    },
    "publish": {
      "npmClient": "npm",
      "allowBranch": "master",
      "verifyAccess": false,
      "verifyRegistry": false,
      "registry": "https://registry.npmjs.org"
    }
  }
}
