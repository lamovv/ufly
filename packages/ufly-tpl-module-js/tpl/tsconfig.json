{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "es6",
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": false,
    "noImplicitAny": false,
    "emitDeclarationOnly": true,
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "./dist",
    "rootDirs": "./src",
    "outDir": "./dist",
    "moduleResolution": "classic",
    "pretty": true,
    "removeComments": false,
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
