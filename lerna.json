{
  "npmClient": "yarn",
  "version": "0.2.0",
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-lockfile",
        "--no-package-lock"
      ]
    },
    "publish": {
      "registry": "http://registry.npmjs.org",
      "verifyRegistry": false,
      "verifyAccess": false,
      "allowBranch": "master",
      "conventionalCommits": true
    }
  },
  "lerna": "2.11.0"
}
