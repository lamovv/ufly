{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-eslint": "^10.1.0",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.12.1",
    "esprima": "^4.0.1",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2"
  },
  "scripts": {
    "debug": "node --inspect-brk packages/cli/bin/cli",
    "upgrade": "yarn upgrade-interactive --latest",
    "link": "cd packages/cli/ && npm link --no-package-lock",
    "unlink": "cd packages/cli/ && npm unlink --no-package-lock",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "clean": "rm -rf node_modules && lerna clean -y",
    "bootstrap": "npm run init",
    "init": "npm run clean && yarn --ignore-scripts && lerna bootstrap --force-local",
    "pub": "lerna publish",
    "pub:all": "lerna publish --force-publish",
    "pub:beta": "lerna publish --canary --preid beta",
    "rebuild": "yarn install --force"
  }
}
